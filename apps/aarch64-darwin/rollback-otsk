#!/bin/sh -e

GREEN='\033[1;32m'
YELLOW='\033[1;33m'
RED='\033[1;31m'
NC='\033[0m'

export NIXPKGS_ALLOW_UNFREE=1

echo "${YELLOW}Rolling back work MacBook configuration (Home Manager, no sudo required)...${NC}"

# Rollback to previous Home Manager generation
nix run home-manager/master -- rollback $@

echo "${GREEN}Rollback complete!${NC}"
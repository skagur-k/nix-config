#!/bin/sh -e

GREEN='\033[1;32m'
YELLOW='\033[1;33m'
RED='\033[1;31m'
NC='\033[0m'

export NIXPKGS_ALLOW_UNFREE=1

echo "${YELLOW}Rolling back work MacBook configuration (no sudo required)...${NC}"

# Rollback to previous generation without sudo
nix --extra-experimental-features 'nix-command flakes' run nix-darwin -- rollback $@

echo "${GREEN}Rollback complete!${NC}"